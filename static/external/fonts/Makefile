# Variables ###################################################################

GET = wget -qO
CDNJS = https://cdnjs.cloudflare.com/ajax/libs
GOOGLEFONTS = https://fonts.gstatic.com/s


# Files #######################################################################

all: FontAwesome.otf fontawesome-webfont.eot fontawesome-webfont.svg fontawesome-webfont.ttf \
	 fontawesome-webfont.woff fontawesome-webfont.woff2 roboto-mono-thin.ttf roboto-mono-light.ttf \
	 roboto-mono.ttf roboto-mono-medium.ttf roboto-mono-bold.ttf roboto-mono-thin-italic.ttf \
	 roboto-mono-light-italic.ttf roboto-mono-italic.ttf roboto-mono-bold-italic.ttf \
	 playfair-display.ttf playfair-display-bold.ttf playfair-display-black.ttf \
	 playfair-display-italic.ttf playfair-display-bold-italic.ttf playfair-display-black-italic.ttf

